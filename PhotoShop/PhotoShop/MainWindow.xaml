            </MenuItem>
            <MenuItem Header="ヘルプ">

            </MenuItem>

        </Menu>




        <!--メイン部分-->
        <Grid Grid.ColumnSpan="3" Margin="0,19,0.334,-0.333" Grid.RowSpan="2">
